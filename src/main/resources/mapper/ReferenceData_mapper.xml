<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="ljy.book.admin.customRepository.mybaits.ReferenceDataDAO">

	<update id="update" parameterType="ReferenceDataDTO">
		UPDATE `reference_data`
		SET
		content = #{content},
		title = #{title}
		WHERE seq = #{seq}
	</update>

	<update id="delete" parameterType="long">
		UPDATE `reference_data`
		SET
		state = 'NO'
		WHERE seq = #{seq}
	</update>
	
	<update id="fileDelete" parameterType="hashMap">
		DELETE FROM
		`reference_file_and_img`
		WHERE NAME = #{fileName} AND reference_data_seq =
		#{seq}
	</update>

</mapper>
